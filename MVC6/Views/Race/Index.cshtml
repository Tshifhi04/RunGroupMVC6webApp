@{
}
<h1>hello there Racers</h1>

<div class="container">

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="@item.Image">
                    <div class="card-body">
                        <p class="card-text">@item.Title.</p>
                        <p class="card-text">@item.Description.</p>

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a type="button" asp-controller="Race" asp-action="Detail" asp-route-id="@item.Id" class=" btn-sm btn-outline-secondary">View</a>
                                <button type="button" class="btn-sm btn-outline-secondary">Edit</button>

                            </div>
                            <small class="text-muted">@item.RaceCategory</small>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>

</div>